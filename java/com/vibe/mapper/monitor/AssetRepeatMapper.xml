    <!-- 更新服务 -->
    <update id="editServiceById" parameterType="com.vibe.monitor.asset.Asset">
        update db_vibe_monitor.t_service
        <set>
            <if test="parentId!=null">
                parent=#{parentId},
            </if>
            <if test="type!=null and type.name!=null">
