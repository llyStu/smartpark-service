    <!-- 更新空间 -->
    <update id="editSpaceById" parameterType="com.vibe.monitor.asset.Asset">
        update db_vibe_monitor.t_space
        <set>
            <if test="parentId!=null">
                parent=#{parentId},
            </if>
            <if test="type!=null and type.name!=null">
